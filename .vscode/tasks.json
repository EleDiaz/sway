{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Ninja build",
            "type": "shell",
            "command": "ninja -C build",
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "Meson Configure",
            "type": "shell",
            "command": "meson build"
        },
        {
            "label": "Clean build",
            "type": "shell",
            "command": "rm -R build"
        }
    ]
}